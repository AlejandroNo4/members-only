<h1>New Post</h1>

<%= form_for @post do |f| %>

<div class="mb-3">
  <%= f.label :title %> <br/>
  <%= f.text_field :title, class: "form-control" %>
</div>
<div class="mb-3">
  <%= f.label :body %> <br/>
  <%= f.text_area :body, class: "form-control" %>
</div>

<div>
  <%= f.submit "Submit Post" %>
</div>

<% end %>